                                        <div class="col">
                                            <label>To year (optional=present):</label>
                                            <input type="text" name="experience_toYear3" class="form-control">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="clearfix"></div>

                        <div class="form-group add-skill mt-s">
                            <h2>Add Skills</h2>
                            <div class="block-container">
                                <div class="all-skills">
                                    <h3>Skill 1</h3>
                                    <div class="new-skills">
                                        <label>Skill</label>
                                        <input type="text" name="skill_name" class="form-control">
                                        <label>Proficiency</label>
                                        <input type="text" name="skill_proficiency" class="form-control">
                                    </div>
                                    <hr>
                                    <h4>Skill 2</h4>
                                    <div class="new-skills">
                                        <label>Skill</label>
                                        <input type="text" name="skill_name2" class="form-control">
                                        <label>Proficiency</label>
