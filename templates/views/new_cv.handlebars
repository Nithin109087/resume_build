<section class="blog-area">
    <div class="container-fluid">

        <div class="row">

            <div class="col-12">
                <div class="container">

                    <form method="POST" action="/cv/new">
                        <div class="mt-150x">
                            <h1>Personal Info</h1>
                            <div class="block-container">
                                <div class="mt-30">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <label>First Name:</label>
                                            <input type="text" name="firstname" id="firstname" value={{user.firstname}}
                                                readonly="readonly" class="form-control">
                                        </div>

                                        <div class="col-lg-6">
                                            <label>Last Name:</label>
                                            <input type="text" name="lastname" id="lastname" value={{user.lastname}}
                                                readonly="readonly" class="form-control">
                                        </div>
                                        <div class="col-lg-6">
                                            <label>Address:</label>
                                            <input type="text" name="address"  id="address"  class="form-control">
                                        </div>
                                        <div class="col-lg-6">
                                            <label>Email:</label>
                                            <input type="text" name="email" id="email"  value={{user.email}} readonly="readonly"
                                                class="form-control">
                                        </div>
                                        <div class="col-lg-6">
                                            <label>Linked In:</label>
                                            <input type="text" name="linkedin" id="linkedin"  class="form-control">
                                        </div>

                                        <div class="col-lg-6">
                                            <label>Phone No:</label>
                                            <input type="text" name="phonenumber" id="phonenumber"  value={{user.phonenumber}}
                                                readonly="readonly" class="form-control">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mt-150x">
                            <h2>About Me</h2>
                            <div class="block-container">
                                <div class="mt-30">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <label>Title:</label>
                                            <input type="text" name="title" id="title" class="form-control">
                                        </div>

                                        <div class="col-lg-12">
                                            <label>Profile:</label>
                                            <textarea type="text" name="profile" id="profile"  class="form-control"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group add-exp mt-s">
                            <h2>Research Interest</h2>
                            <div class="all-exps">
                                <h4>Research</h4>
                                <div class="new-exp">
                                    <label>Title:</label>
                                    <input type="text" name="research_title" id="research_title"  class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group add-edu">
                            <h2>Add Educations</h2>
                            <div class="all-edus">
                                <h3>Education</h3>
                                <div class="new-edu">
                                    <label>Field of study:</label>
                                    <input type="text" name="education_field"  id="education_field" class="form-control">
                                    <label>Qualification:</label>
                                    <input type="text" name="education_qualification" id="education_qualification" class="form-control">
                                    <label>School:</label>
                                    <input type="text" name="education_school" id="education_school" class="form-control">
                                    <div class="form-row">
                                        <div class="col">
                                            <label>From year:</label>
                                            <input type="month" name="education_fromYear" id="education_fromYear" class="form-control">
                                        </div>
                                        <div class="col">
                                            <label>To year (optional=present):</label>
                                            <input type="month" name="education_toYear" id="education_toYear" class="form-control">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group add-exp mt-s">
                            <h2>Publications</h2>
                            <div class="all-exps">
                                <div class="new-exp">
                                    <label>Title:</label>
                                    <input type="text" name="publications_title" id="publications_title" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group add-exp mt-s">
                            <h2>Conferences & Courses</h2>
                            <div class="all-exps">
                                <h4>Conference</h4>
                                <div class="new-exp">
                                    <label>Title:</label>
                                    <input type="text" name="conference_title" id="conference_title"  class="form-control">
                                </div>
                            </div>
                            <div class="all-exps">
                                <h4>Courses</h4>
                                <div class="new-exp">
                                    <label>Title:</label>
                                    <input type="text" name="courses_title" id="courses_title" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group add-exp mt-s">
                            <h2>Certificates</h2>
                            <div class="all-exps">
                                <div class="new-exp">
                                    <label>Title:</label>
                                    <input type="text" name="certificate_title" id="certificate_title" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group add-exp mt-s">
                            <h2>Volunteer Experience</h2>
                            <div class="all-exps">
                                <div class="new-exp">
                                    <label>Title:</label>
                                    <input type="text" name="volunteer_title" id="volunteer_title" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group add-exp mt-s">
                            <h2>Add Experiences</h2>
                            <div class="all-exps">
                                <div class="new-exp">
                                    <label>Title:</label>
                                    <input type="text" name="experience_title" id="experience_title" class="form-control">
                                    <label>Company:</label>
                                    <input type="text" name="experience_company"  id="experience_company"  class="form-control">
                                    <div class="form-row">
                                        <div class="col">
                                            <label>From year:</label>
                                            <input type="number" name="experience_fromYear" id="experience_fromYear"  class="form-control">
                                        </div>
                                        <div class="col">
                                            <label>To year (optional=present):</label>
                                            <input type="text" name="experience_toYear" id="experience_toYear" class="form-control">
                                        </div>
                                    </div>
                                </div>  
                            </div>
                        </div>

                        <div class="clearfix"></div>

                        <div class="form-group add-skill mt-s">
                            <h2>Add Skills</h2>
                            <div class="block-container">
                                <div class="all-skills">
                                    <h3>Skill 1</h3>
                                    <div class="new-skills">
                                        <label>Skill</label>
                                        <input type="text" name="skill_name" id="skill_name" class="form-control">
                                        <label>Proficiency</label>
                                        <input type="text" name="skill_proficiency" class="form-control">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr class="mt-100">
                        <input type="submit" name="submit" value="Build CV" class="btn-sub">
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>